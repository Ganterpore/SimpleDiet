<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--  TODO add tracking of alcohol and caffeine, and larger tracking of cheats  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last 7 Days"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
<!--        <include-->
<!--            layout="@layout/container_food_groups_counts_mini"/>-->

    <LinearLayout
        android:id="@+id/header_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/vege_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/vegetables_full"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/veg_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veges"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/weekly_veges_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/protein_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/meat_full"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/protein_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/weekly_protein_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/dairy_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/dairy_full"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/dairy_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/weekly_dairy_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/grain_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/grain_full"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/grain_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grain"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/weekly_grain_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/fruit_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/fruit_full"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/fruit_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/weekly_fruit_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/water_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/symbol_water_completed"
                        app:layout_constraintDimensionRatio="1:1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/water_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/weekly_water_intake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/weekly_caffeine_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/caffiene"
                        app:layout_constraintDimensionRatio="1:1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/caffeine_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caffeine"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/weekly_caffeine_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/weekly_alcohol_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/alcohol"
                        app:layout_constraintDimensionRatio="1:1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/alcohol_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alcohol"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/weekly_alcohol_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <include
                        android:id="@+id/weekly_cheats_progress"
                        layout="@layout/progress_cheats"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/cheat_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheats"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/weekly_cheat_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>