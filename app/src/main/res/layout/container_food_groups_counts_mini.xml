<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center|bottom"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:id="@+id/water_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/water_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="W"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/water_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/veg_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/veg_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="V"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/veg_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/protein_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/protein_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/protein_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dairy_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/dairy_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dairy_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grain_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/grain_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/grain_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fruit_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fruit_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/fruit_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/cheat_container">

        <TextView
            android:id="@+id/cheat_count_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/cheat_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>