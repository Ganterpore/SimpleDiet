<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Cheat Score"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a cheat score that measures how much of a cheat meal this was. The higher the score, the worse it is for you."
        />


    <RadioGroup
        android:id="@+id/cheat_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp" >

        <RadioButton
            android:id="@+id/cheat_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/cheat_selector_background"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/cheat_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/cheat_selector_background"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/cheat_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/cheat_selector_background"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/cheat_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/cheat_selector_background"
            android:button="@null"/>
    </RadioGroup>

    <TextView
        android:id="@+id/example_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_0"/>
</LinearLayout>