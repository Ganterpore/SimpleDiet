<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_28_days"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <LinearLayout
        android:id="@+id/header_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/monthly_vege_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/vegetables_full_thumbnail"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/veg_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veges"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/monthly_veges_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <ImageView
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/monthly_protein_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/meat_full_thumbnail"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/protein_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/monthly_protein_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <ImageView
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/monthly_dairy_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/dairy_full_thumbnail"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/dairy_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/monthly_dairy_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/monthly_grain_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/grain_full_thumbnail"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/grain_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grain"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/monthly_grain_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/monthly_fruit_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/fruit_full_thumbnail"
                    android:rotation="270"
                    app:layout_constraintDimensionRatio="1:1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/fruit_count_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/monthly_fruit_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/monthly_water_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/monthly_water_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/symbol_water_completed"
                        app:layout_constraintDimensionRatio="1:1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/water_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/monthly_water_intake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/monthly_caffeine_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/monthly_caffeine_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/caffiene"
                        app:layout_constraintDimensionRatio="1:1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/caffeine_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caffeine"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/monthly_caffeine_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/monthly_alcohol_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/monthly_alcohol_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/alcohol"
                        app:layout_constraintDimensionRatio="1:1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/alcohol_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alcohol"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/monthly_alcohol_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/monthly_cheat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <include
                        android:id="@+id/monthly_cheats_progress"
                        layout="@layout/progress_cheats"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/cheat_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheats"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/monthly_cheat_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>